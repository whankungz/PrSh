<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seekBarSpeed"
        android:layout_centerHorizontal="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layoutScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <TextView
                android:visibility="gone"
                android:id="@+id/proper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="สรรพคุณ"
                android:textColor="#a3a2a2"
                android:textSize="4dp" />


            <TextView
                android:visibility="gone"
                android:id="@+id/properdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#1a1919"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/how"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="#ffffff"
                android:text="วิธีรับประทาน"
                android:textColor="#a3a2a2"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/howdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#1a1919"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="#ffffff"
                android:text="ข้อควรระวัง"
                android:textColor="#a3a2a2"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#1a1919"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"
                android:layout_marginTop="14dp"
                android:background="#eaeaea" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/peop"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_whan" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="240dp"
                    android:background="#ffffff"
                    android:text="12/01/60"
                    android:textColor="#d6d6d6"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/nameMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="17dp"
                    android:background="#ffffff"
                    android:text="รสชาติอร่อยถูกปากคนไทย"
                    android:textColor="#5e5e5e"
                    android:textSize="16dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/Uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="whankungz"
                android:textColor="#c4c4c4"
                android:textSize="18dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"
                android:layout_marginTop="14dp"
                android:background="#eaeaea" />


            <RatingBar
                android:visibility="gone"
                android:id="@+id/rat"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="40dp" />

            <RelativeLayout
                android:id="@+id/relament"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <EditText
                    android:id="@+id/ment"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:hint="แสดงความคิดเห็น..."
                    android:onClick="ClickStart"
                    android:paddingLeft="10dp"
                    android:textColor="#7c7c7c"
                    android:textColorHint="#bcbbbb"
                    android:textSize="20dp" />

                <View
                    android:layout_above="@+id/submit"
                    android:layout_below="@+id/ment"
                    android:layout_width="wrap_content"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="10dp"
                    android:background="#eaeaea" />

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ment"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_bg"
                    android:gravity="center"
                    android:onClick="ClickStart"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="ตกลง"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="7dp"
                android:background="#ffffff" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>